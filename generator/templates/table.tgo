func (qb {{ $queryType }}) OrderBy(orderBys ...{{ $orderType }}) {{ $queryType }} {
    exprs := make([]string, len(orderBys))
    for i := range orderBys {
        exprs[i] = orderBys[i].{{ $.Entity }}OrderExpr()
